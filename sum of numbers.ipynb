   "source": [
    "# sum of n numbers"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "id": "7c13919f",
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "5\n",
      "15\n"
     ]
    }
   ],
   "source": [
    "n=int(input())\n",
    "count=1\n",
    "tot=0\n",
    "while count<=n:\n",
    "    tot=tot+count\n",
    "    count=count+1\n",
    "print(tot)"
   ]
